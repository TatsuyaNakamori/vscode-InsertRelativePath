{
  "name": "insertrelpath",
    "displayName": "Insert a relative path",
    "description": "%ext.description%",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "galleryBanner": {
        "color": "#C0C0C8",
        "theme": "dark"
    },
    "icon": "resources/icon/extension_main.png",
    "license": "MIT",
    "preview": true,
    "keywords": [
        "RelativePath",
        "RelPath",
        "path",
        "file",
        "directory"
    ],
    "categories": [
        "Other"
    ],
    "homepage": "https://github.com/TatsuyaNakamori/vscode-InsertRelativePath",
    "repository": {
        "type": "git",
        "url": "https://github.com/TatsuyaNakamori/vscode-InsertRelativePath.git"
    },
    "bugs": {
        "url": "https://github.com/TatsuyaNakamori/vscode-InsertRelativePath/issues"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "category": "InsertRelPath",
                "command": "insertrelpath.insertRelPath",
                "title": "%insertrelpath.insertRelPath.title%"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "insertrelpath.insertRelPath",
                    "when": "never"
                }
            ],
            "explorer/context": [
                {
                    "group": "insertRelPath@1",
                    "command": "insertrelpath.insertRelPath"
                }
            ]
        },
        "configuration": [
            {
                "title": "Relative Path",
                "properties": {
                    "InsertRelPath.format": {
                        "type": "string",
                        "default": "${RELPATH}\\ntest",
                        "markdownDescription": "%conf.format%"
                    },
                    "InsertRelPath.separator": {
                        "type": "string",
                        "enum": [
                            "/", "\\", "Adapt to OS"
                        ],
                        "default": "/",
                        "markdownDescription": "%conf.separator%"
                    },
                    "InsertRelPath.withExtension": {
                        "type": "boolean",
                        "default": true,
                        "markdownDescription": "%conf.withExtension%"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.46.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.15.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    }
}
